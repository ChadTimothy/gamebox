{
  "name": "@gamebox/web",
  "version": "0.1.0",
  "description": "GameBox widgets - React components for ChatGPT",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite --port 4444",
    "build": "tsc && vite build",
